<UserControl x:Class="Demo_Korbanov.ucs.agent_uc"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Demo_Korbanov.ucs"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="700" Background="White">
    <Grid Margin="0,5,0,5" Background="#FFFFE9F9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="300"/>
            
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="7,0,0,0">
            <Button Width="100" x:Name="FullInfpBtn" Margin="0,10,0,0" Background="#FFB175EE" Click="FullInfpBtn_Click">Подробнее</Button>
            <Button Width="100" x:Name="EditBtn" Margin="0,10,0,0" Background="#FFB175EE">Редактировать</Button>
            <Button Width="100" x:Name="DelBTn" Margin="0,10,0,0" Background="#FFB175EE" Click="DelBTn_Click">Удалить</Button>
        </StackPanel>
        <StackPanel  Width="250" Orientation="Vertical" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
            <TextBlock x:Name="TitleTb" Margin="0,10,0,0" Foreground="#FFB175EE" FontWeight="Bold" FontFamily="Century Gothic">Название агента</TextBlock>
            <TextBlock x:Name="PhoneTb" Margin="0,10,0,0" Foreground="#FFB175EE" FontWeight="Bold" FontFamily="Century Gothic">Номер агента</TextBlock>
            <TextBlock x:Name="EmailTb" Margin="0,10,0,0" Foreground="#FFB175EE" FontWeight="Bold" FontFamily="Century Gothic">Почта агента</TextBlock>
        </StackPanel>
        <StackPanel  Width="300" Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="DirectorTb" Margin="0,10,0,0" TextTrimming="WordEllipsis" Foreground="#FFB175EE" FontWeight="Bold" TextWrapping="Wrap" FontFamily="Century Gothic">Директор агента</TextBlock>
            <TextBlock x:Name="PriorityTb" Margin="0,10,0,0"  Foreground="#FFB175EE" FontWeight="Bold" FontFamily="Century Gothic">Приоритет агента</TextBlock>
            <!--<TextBlock x:Name="EmailTb" Margin="0,10,0,0" Foreground="#FFB175EE" FontWeight="Bold" FontFamily="Century Gothic">Почта агента</TextBlock>-->
        </StackPanel>
    </Grid>
</UserControl>

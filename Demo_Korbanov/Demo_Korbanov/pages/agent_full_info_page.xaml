<Page x:Class="Demo_Korbanov.pages.agent_full_info_page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Demo_Korbanov.pages"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="agent_full_info_page">

    <Grid Background="White">
        <Border Width="500" Height="300" CornerRadius="20" Background="#FFFFE9F9" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel  Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center">
                    <StackPanel Orientation="Vertical">

                        <Image x:Name="Logo" Height="120"
                       Source="/images/Глазки-save.png" />
                        <TextBlock Margin="16,10,0,0" FontSize="15" x:Name="AgentTyp1e"
 Foreground="#FFB175EE" FontWeight="Bold" TextWrapping="Wrap"
 FontFamily="Century Gothic">Тип агента</TextBlock>
                        <TextBlock Margin="16,10,0,0" FontSize="15" x:Name="INN"
             Foreground="#FFB175EE" FontWeight="Bold" TextWrapping="Wrap"
             FontFamily="Century Gothic">Инн</TextBlock>
                        <TextBlock Margin="16,10,0,0" FontSize="15" x:Name="KPP"
                Foreground="#FFB175EE" FontWeight="Bold" TextWrapping="Wrap"
                FontFamily="Century Gothic">КПП</TextBlock>

                    </StackPanel>
                    <StackPanel Orientation="Vertical">

                        <TextBlock Margin="16,10,0,0" Width="300" Height="50" 
                           TextWrapping="Wrap" FontSize="15" x:Name="AdressAgent"
            Foreground="#FFB175EE" FontWeight="Bold" 
            FontFamily="Century Gothic">Адрес Адрес Адрес Адрес Адрес Адрес Адрес</TextBlock>
                        <TextBlock Margin="16,10,0,0" FontSize="15" x:Name="DirectorTb"
Foreground="#FFB175EE" FontWeight="Bold" TextWrapping="Wrap"
FontFamily="Century Gothic">Директор</TextBlock>
                        <TextBlock Margin="16,10,0,0" FontSize="15" x:Name="emailtb"
Foreground="#FFB175EE" FontWeight="Bold" TextWrapping="Wrap"
FontFamily="Century Gothic">Директор</TextBlock>
                        <TextBlock Margin="16,10,0,0" FontSize="15" x:Name="phoneTb"
Foreground="#FFB175EE" FontWeight="Bold" TextWrapping="Wrap"
FontFamily="Century Gothic">Директор</TextBlock>
                        <TextBlock Margin="16,10,0,0" FontSize="15" x:Name="priorit1y"
Foreground="#FFB175EE" FontWeight="Bold" TextWrapping="Wrap"
FontFamily="Century Gothic">Директор</TextBlock>
                    </StackPanel>

                </StackPanel>
                <Button Width="100" Height="30" x:Name="BackBtn" Margin="0,10,0,20" Background="#FFB175EE" VerticalAlignment="Bottom" Click="BackBtn_Click">Назад</Button>
            </StackPanel>
        </Border>
       
    </Grid>
</Page>

<Page x:Class="HabibyLLin421P.Pages.AddEditAgentsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HabibyLLin421P.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1000"
      Title="AddEditAgentsPage">

    <Grid Background="#FFE9F9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="400"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Right" Text="Наименование" FontSize="30"></TextBlock>
            <TextBlock HorizontalAlignment="Right" Text="Тип" FontSize="30"></TextBlock>
            <TextBlock HorizontalAlignment="Right" Text="Адрес" FontSize="30"></TextBlock>
            <TextBlock HorizontalAlignment="Right" Text="ИНН" FontSize="30"></TextBlock>
            <TextBlock HorizontalAlignment="Right" Text="КПП" FontSize="30"></TextBlock>
            <TextBlock HorizontalAlignment="Right" Text="Директор" FontSize="30"></TextBlock>
            <TextBlock HorizontalAlignment="Right" Text="Телефон" FontSize="30"></TextBlock>
            <TextBlock HorizontalAlignment="Right" Text="Почта" FontSize="30"></TextBlock>
            <TextBlock HorizontalAlignment="Right" Text="Приоритет" FontSize="30"></TextBlock>
        </StackPanel>
        <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left">
            <TextBox x:Name = "NameTb" Width="250" Height="30" BorderBrush="Black" BorderThickness="3" Margin ="5"></TextBox>
            <ComboBox x:Name = "TypeId" Width="250" Height="30" BorderBrush="Black" BorderThickness="3" Margin ="5"></ComboBox>
            <TextBox x:Name = "AdressTb" Width="250" Height="30" BorderBrush="Black" BorderThickness="3" Margin ="5"></TextBox>
            <TextBox x:Name = "INNtb" Width="250" Height="30" BorderBrush="Black" BorderThickness="3" Margin ="5"></TextBox>
            <TextBox x:Name = "KPPtb" Width="250" Height="30" BorderBrush="Black" BorderThickness="3" Margin ="5"></TextBox>
            <TextBox x:Name = "DirectorTb" Width="250" Height="30" BorderBrush="Black" BorderThickness="3" Margin ="5"></TextBox>
            <TextBox x:Name = "PhoneTb" Width="250" Height="30" BorderBrush="Black" BorderThickness="3" Margin ="5"></TextBox>
            <TextBox x:Name = "EmailTb" Width="250" Height="30" BorderBrush="Black" BorderThickness="3" Margin ="5"></TextBox>
            <TextBox x:Name = "PriorutyTb" Width="250" Height="30" BorderBrush="Black" BorderThickness="3" Margin ="5"></TextBox>
        </StackPanel>
        <StackPanel Grid.Column="2">
            <Border BorderBrush="Black" BorderThickness="3" Width="300" Height="400" Margin="30">
                <Image Stretch="Fill" x:Name="MainImage" Width="300" Height="400"></Image>
            </Border>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="LoadBtn" Content="Загрузить" Width="150" Height="70" Click="LoadBtn_Click"></Button>
                <Button x:Name="DeleteBtn" Content="Удалить" Width="150" Height="70" Click="DeleteBtn_Click"></Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BackBtn" Content="Отмена" Width="150" Height="70" Click="BackBtn_Click"></Button>
                <Button x:Name="SaveBtn" Content="Сохранить" Width="150" Height="70" Click="SaveBtn_Click"></Button>
            </StackPanel>
            <Button x:Name="DeleteAgentBtn" Width="200" Height="50" Content="УДАЛИТЬ" Background="Red" Click="DeleteAgentBtn_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
